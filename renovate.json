{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "kubernetes",
    "flux"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/(^|/)k3s/.*\\.ya?ml$/",
      "/(^|/)k3s/.*\\.yaml$/"
    ]
  },
  "flux": {
    "managerFilePatterns": [
      "/(^|/)k3s/.*\\.ya?ml$/",
      "/(^|/)k3s/.*\\.yaml$/"
    ]
  }
}
